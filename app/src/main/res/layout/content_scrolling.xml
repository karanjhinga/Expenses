<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/staticString"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Summary:"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="22dp"/>
                <TextView
                    android:id="@+id/staticString2"
                    android:layout_below="@id/staticString"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Income:\nExpense:\nBalance:"
                    android:textSize="18dp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/Income"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGreen"
                    android:drawableLeft="@drawable/ic_add"
                    android:text="00.00"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/staticString2"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/Expense"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRed"
                    android:drawableLeft="@drawable/ic_minus"
                    android:text="00.00"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/Income"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/Balance"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="00.00"
                    android:drawableLeft="@drawable/ic_equal"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/Expense"
                    android:textSize="16dp"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:onClick="showRecords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView3"
            android:elevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/cardView2">
            <RelativeLayout
                android:background="@drawable/record"
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_records"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Records"
                    android:textColor="@color/colorWhite"
                    android:textSize="22dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:id="@+id/cardView"
            android:layout_below="@id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="49"
                android:background="@drawable/green_button"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:id="@+id/addincome"
                android:textSize="16dp"
                android:text="Add Income"
                android:onClick="addIncome"
                android:layout_marginRight="15dp"/>
            <Button
                android:id="@+id/addexpense"
                android:onClick="addExpense"
                android:layout_weight="49"
                android:background="@drawable/red_button"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Expense"/>

        </LinearLayout>
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>